.adjustPrice {
  padding: 30rpx;
  color: #333333;
  box-sizing: border-box;
  font-size: 26rpx;
}

.adjustPrice .title {
  height: 36rpx;
  margin-bottom: 20rpx;
  font-weight: 400;
  line-height: 36rpx;
}

.adjustPrice .input_box {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  border-radius: 4rpx;
  border: 2rpx solid #E8E8E8;
  box-sizing: border-box;
}

.adjustPrice .input_box .picker {
  width: 650rpx;
  height: 36rpx;
  font-weight: 400;
  line-height: 36rpx;
}

.adjustPrice .placeholder {
  color: #AAAAAA;
}

.adjustPrice .time_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.adjustPrice .time_wrap .time_wrap_text {
  height: 36rpx;
  font-weight: 400;
  line-height: 36rpx;
}

.adjustPrice .time_wrap .time_box {
  display: flex;
  align-items: center;
  width: 300rpx;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 4rpx;
  border: 2rpx solid #E8E8E8;
  box-sizing: border-box;
}

.adjustPrice .time_wrap .time_box .picker {
  width: 260rpx;
  height: 36rpx;
  font-weight: 400;
  line-height: 36rpx;
}

.adjustPrice .check_box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  height: 158rpx;
}

.adjustPrice .check_box .item {
  width: 140rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  font-weight: 400;
  color: #AAAAAA;
  background: #F4F5F5;
  border-radius: 33rpx;
}
.adjustPrice .check_box .select{
  background-color: #3D82FF;
  color: #FFFFFF;
}
.adjustPrice .input_box .addSeller {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 650rpx;
}

.adjustPrice .input_box .addSeller .image {
  width: 40rpx;
  height: 40rpx;
}

.adjustPrice .tips {
  font-size: 20rpx;
  font-weight: 400;
  color: #F0513A;
}

.adjustPrice .sub {
  width: 690rpx;
  height: 88rpx;
  margin-top: 30rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  background: #3D82FF;
  border-radius: 4rpx;
}