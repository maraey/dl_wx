.pileTemplate .tab {
  display: flex;
  justify-content: space-around;
  margin-top: 26rpx;
}

.pileTemplate .tab .tab_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pileTemplate .tab .tab_item .text {
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
}

.pileTemplate .tab .select .text {
  font-weight: 500;
  color: #3D82FF;
}

.pileTemplate .tab .select .line {
  width: 64rpx;
  height: 4rpx;
  margin-top: 22rpx;
  background: #3D82FF;
}

.pileTemplate .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  margin: 0 auto;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #F5F5F5;
}
.pileTemplate .item .left{
  width: 600rpx;
}
.pileTemplate .item .left .title {
  display: flex;
  align-items: center;
}

.pileTemplate .item .left .title .text {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.pileTemplate .item .left .title .image {
  width: 12rpx;
  height: 24rpx;
  margin-left: 26rpx;
}

.pileTemplate .item .left .info {
  height: 34rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}

.pileTemplate .item .delete {
  width: 104rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #F0513A;
  background: #FEEEED;
  border-radius: 10rpx;
  border: 2rpx solid #F0513A;
  box-sizing: border-box;
}
.pileTemplate .add_image{
  position: fixed;
  bottom: 234rpx;
  right: 22rpx;
  width: 106rpx;
  height: 106rpx;
}