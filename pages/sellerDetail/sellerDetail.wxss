.sellerDetail {
  width: 100vw;
  height: 100vh;
  padding: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.sellerDetail .top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.sellerDetail .top .top_left .seller_title {
  height: 44rpx;
  margin-bottom: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  line-height: 44rpx;
}

.sellerDetail .top .top_left .seller_address {
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
}

.sellerDetail .top .top_right {
  display: flex;
  align-items: center;
}

.sellerDetail .top .top_right .image_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
  font-weight: 400;
  color: #333333;
}

.sellerDetail .top .top_right .image_box+.image_box {
  margin-left: 44rpx;
}

.sellerDetail .top .top_right .image_box .image {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 10rpx;
}

.sellerDetail .line {
  width: 100vw;
  margin-bottom: 30rpx;
  border-top: 2rpx solid #f5f5f5;
}

.sellerDetail .middle {
  padding-bottom: 30rpx;
}

.sellerDetail .middle .item {
  display: flex;
}

.sellerDetail .middle .item+.item {
  margin-top: 16rpx;
}

.sellerDetail .middle .item .item_title {
  width: 182rpx;
  height: 36rpx;
  margin-right: 38rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
}

.sellerDetail .middle .item .item_text {
  max-width: 470rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
}

.sellerDetail .middle .item .item_text .item_text_item+.item_text_item {
  margin-top: 16rpx;
}

.sellerDetail .bottom {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  height: 300rpx;
}

.sellerDetail .bottom .bottom_list {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 172rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
}

.sellerDetail .bottom .bottom_list .image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.sellerDetail .popup {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 2;
}

.sellerDetail .popup .popup_box {
  position: absolute;
  top: 340rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 622rpx;
  height: 420rpx;
  background-color: #fff;
  border-radius: 8rpx;
  z-index: 3;
}

.sellerDetail .popup .popup_box .popup_title {
  margin: 30rpx 0 28rpx;
  text-align: center;
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 42rpx;
}

.sellerDetail .popup .popup_box .input_box {
  display: flex;
  align-items: center;
  width: 534rpx;
  height: 82rpx;
  padding: 0 24rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.sellerDetail .popup .popup_box .input_box .input {
  width: 480rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
}

.sellerDetail .popup .popup_box .popup_btn_box {
  display: flex;
  align-items: center;
  width: 622rpx;
  height: 92rpx;
  border-top: 2rpx solid #f5f5f5;
}

.sellerDetail .popup .popup_box .popup_btn_box .btn {
  width: 50%;
  height: 94rpx;
  text-align: center;
  line-height: 94rpx;
}

.sellerDetail .popup .popup_box .popup_btn_box .cancel {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
}

.sellerDetail .popup .popup_box .popup_btn_box .confirm {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.sellerDetail .popup .popup_box .popup_btn_box .btn_line {
  width: 2rpx;
  height: 26rpx;
  background: #F5F5F5;
}