.statistics .tab_box {
  display: flex;
  align-items: center;
  width: 690rpx;
  margin: 30rpx auto 40rpx;
}

.statistics .tab_box .tab_item {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.statistics .tab_box .tab_item+.tab_item {
  margin-left: 40rpx;
}

.statistics .tab_box .tab_select {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #3D82FF;
  line-height: 44rpx;
}

.statistics .tab_box .tab_select .tab_line {
  width: 48rpx;
  height: 8rpx;
  margin-top: 8rpx;
  background: #3D82FF;
  border-radius: 4rpx;
}

.statistics .input_box {
  display: flex;
  align-items: center;
  width: 690rpx;
  margin: 24rpx auto;
  padding: 0 30rpx;
  height: 72rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.statistics .input_box .image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 22rpx;
}

.statistics .input_box .input {
  width: 580rpx;
  font-size: 26rpx;
}

.statistics .picker_box {
  display: flex;
  align-items: center;
  width: 690rpx;
  margin: 24rpx auto 30rpx;
}

.statistics .picker_box .picker {
  display: flex;
  align-items: center;
}

.statistics .picker_box .picker .text {
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 42rpx;
}

.statistics .picker_box .picker .image {
  width: 12rpx;
  height: 8rpx;
  margin: 0 16rpx;
}

.statistics .tab_list {
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  width: 690rpx;
  height: 64rpx;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.statistics .tab_list .tab_list_item {
  width: 156rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #CCCCCC;
  background: #FFFFFF;
  border-radius: 8rpx;
  border: 2rpx solid #CCCCCC;
}
.statistics .tab_list .tab_list_item+.tab_list_item {
  margin-left: 22rpx;
}
.statistics .tab_list .tab_list_item_select {
  color: #3D82FF;
  background: #E7F2FF;
  border: 2rpx solid #3D82FF;
}

.statistics .list {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 700rpx;
  height: calc(100vh - 480rpx);
  margin: 0 auto;
}

.statistics .list .item {
  width: 690rpx;
  padding: 36rpx 32rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(61, 130, 255, 0.2);
  border-radius: 8rpx;
  box-sizing: border-box;
}

.statistics .list .item .item_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.statistics .list .item .item_top .title {
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 42rpx;
}

.statistics .list .item .item_top .copy {
  width: 76rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #3D82FF;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(61, 130, 255, 0.2);
  border-radius: 19rpx;
  border: 2rpx solid #3D82FF;
}

.statistics .list .item .line {
  width: 626rpx;
  height: 2rpx;
  margin: 28rpx 0 30rpx;
  background: #F5F5F5;
}

.statistics .list .item .info {
  display: flex;
  align-items: center;
}
.statistics .list .item .info+.info{
  margin-top: 16rpx;
}
.statistics .list .item .info .info_title {
  width: 112rpx;
  height: 40rpx;
  margin-right: 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
  line-height: 40rpx;
}

.statistics .list .item .info .info_text {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.statistics .tabbar {
  display: flex;
  width: 630rpx;
  margin-bottom: 30rpx;
}

.statistics .tabbar .tabbar_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.statistics .tabbar .tabbar_item+.tabbar_item {
  margin-left: 24rpx;
}

.statistics .tabbar .tabbar_item .title {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.statistics .tabbar .tabbar_item .line {
  width: 48rpx;
  height: 8rpx;
  margin-top: 10rpx;
}

.statistics .tabbar .selected .title {
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #3D82FF;
  line-height: 44rpx;
}

.statistics .tabbar .selected .line {
  width: 48rpx;
  height: 8rpx;
  margin-top: 8rpx;
  background: #3D82FF;
  border-radius: 4rpx;
}