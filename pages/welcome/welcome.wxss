.welcome{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
}

.welcome .wel_img{
  margin-top: 180rpx;
  margin-bottom: 52rpx;
  width: 438rpx;
  height: 450rpx;
}

.welcome .tittle{
  margin-bottom: 40rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #2F3B4E;
  line-height: 42rpx;
}

.welcome .btn{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3D82FF 50%, #47ACFC 100%);
	border-radius: 40rpx;
	box-sizing: border-box;
}

.welcome .btn .btn_text{
  width: 104rpx;
  height: 36rpx;
  font-size: 26rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 30rpx;
}