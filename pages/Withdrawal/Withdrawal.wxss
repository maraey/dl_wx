.Withdrawal {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
}

.Withdrawal .card {
  position: relative;
  width: 714rpx;
  height: 354rpx;
}

.Withdrawal .card image {
  width: 714rpx;
  height: 354rpx;
}

.Withdrawal .card .amount_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
}

.Withdrawal .card .amount_box .amount_box_title {
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.Withdrawal .card .amount_box .amount {
  display: flex;
  align-items: flex-end;
  margin-top: 20rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.Withdrawal .card .amount_box .amount .amount_num {
  margin-right: 10rpx;
  height: 72rpx;
  font-size: 60rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.Withdrawal .input_title {
  width: 690rpx;
  height: 40rpx;
  margin: 24rpx 0 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #333333;
}

.Withdrawal .input {
  width: 690rpx;
  font-size: 60rpx;
}

.Withdrawal .input input {
  width: 690rpx;
  height: 74rpx;
}

.Withdrawal .line {
  width: 690rpx;
  margin: 20rpx 0 30rpx;
  border-top: 2rpx solid #F5F5F5;
}

.Withdrawal .Withdrawal_tips {
  width: 690rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #F0513A;
}

.Withdrawal .info {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 40rpx;
}

.Withdrawal .info+.info {
  margin-top: 16rpx;
}

.Withdrawal .info .info_title {
  width: 140rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.Withdrawal .info .info_text {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
}

.Withdrawal .operate {
  display: flex;
  justify-content: space-between;
  width: 690rpx;
  margin-top: 30rpx;
}

.Withdrawal .operate .sub {
  width: 332rpx;
  height: 88rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 88rpx;
  background: #FFFFFF;
  color: #3D82FF;
  border-radius: 4rpx;
  border: 2rpx solid #3D82FF;
  box-sizing: border-box;
}

.Withdrawal .operate .edit {
  width: 332rpx;
  height: 88rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 88rpx;
  background: #3D82FF;
  color: #fff;
  border-radius: 4rpx;
}