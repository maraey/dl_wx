page {
  background: #F4F5F5;
}

.vipDetail {
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
}

.vipDetail .box {
  width: 690rpx;
  padding: 36rpx 32rpx 24rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.vipDetail .box+.box{
  margin-top: 30rpx;
}
.vipDetail .box .item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
}

.vipDetail .box .item+.item {
  margin-top: 16rpx;
}

.vipDetail .box .item .item_title {
  width: 330rpx;
  margin-right: 56rpx;
  height: 40rpx;
  color: #999999;
  line-height: 40rpx;
}

.vipDetail .box .item .item_info {
  width: 340rpx;
  height: 40rpx;
  color: #333333;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.vipDetail .box .item .item_info .use {
  color: #3D82FF;
}

.vipDetail .box .line {
  width: 690rpx;
  margin: 24rpx 0 16rpx;
  border-top: 2rpx solid #f5f5f5;
}

.vipDetail .box .btn {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

.vipDetail .box .btn .delete {
  width: 156rpx;
  height: 60rpx;
  margin-right: 24rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  border-radius: 8rpx;
  border: 2rpx solid #E9EAF0;
  box-sizing: border-box;
}

.vipDetail .box .btn .edit {
  width: 156rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #FFFFFF;
  background: #3D82FF;
  border-radius: 8rpx;
}