.batteryDeviceDetail {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
  padding-bottom: 40rpx;
  background-color: #F4F5F5;
  overflow: scroll;
  box-sizing: border-box;
}

.batteryDeviceDetail .wrap {
  position: sticky;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.batteryDeviceDetail .screen_bar {
  display: flex;
  justify-content: space-around;
  width: 100vw;
  height: 88rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  border-bottom: 2rpx solid #f5f5f5;
  box-sizing: border-box;
}

.batteryDeviceDetail .screen_bar .screen_item {
  height: 88rpx;
  line-height: 88rpx;
}

.batteryDeviceDetail .screen_bar .screen_selected {
  position: relative;
  font-weight: 500;
  color: #3D82FF;
  /* border-bottom: 4rpx solid #3D82FF; */
  box-sizing: border-box;
}

.batteryDeviceDetail .screen_bar .screen_selected .line {
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 64rpx;
  height: 4rpx;
  transform: translateX(-50%);
  background: #3D82FF;
}

.batteryDeviceDetail .basic_info {
  width: 690rpx;
  margin-top: 30rpx;
  padding: 36rpx 32rpx;
  background: #FFFFFF;
  border-radius: 8px;
  box-sizing: border-box;
}

.batteryDeviceDetail .basic_info .basic_info_item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.batteryDeviceDetail .basic_info .basic_info_item+.basic_info_item {
  margin-top: 16rpx;
}

.batteryDeviceDetail .basic_info .basic_info_item .title {
  width: 112rpx;
  margin-right: 28rpx;
}

.batteryDeviceDetail .basic_info .basic_info_item .text {
  color: #999999;
}

.batteryDeviceDetail .basic_info .basic_info_item .qrcode {
  display: flex;
  flex-direction: column;
}

.batteryDeviceDetail .basic_info .basic_info_item .qrcode .image {
  width: 160rpx;
  height: 160rpx;
  margin-top: 20rpx;
}

.batteryDeviceDetail .return {
  width: 690rpx;
  height: 88rpx;
  margin-top: 30rpx;
  text-align: center;
  line-height: 88rpx;
  background: #3D82FF;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  border-radius: 4rpx;
}

.batteryDeviceDetail .manage .manage_top_box {
  width: 690rpx;
  margin-top: 24rpx;
  padding: 36rpx 32rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

.batteryDeviceDetail .manage .manage_top_box .device_set {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.batteryDeviceDetail .manage .manage_top_box .device_set .set_error {
  width: 160rpx;
  height: 64rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 64rpx;
  text-align: center;
  background: #F0513A;
  border-radius: 8rpx;
}


.batteryDeviceDetail .manage .slot_box {
  width: 690rpx;
  height: 204rpx;
  margin-top: 30rpx;
  padding: 20rpx 24rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

.batteryDeviceDetail .manage .slot_box .slot_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 42rpx;
}

.batteryDeviceDetail .manage .slot_box .slot_title .open {
  width: 96rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #3D82FF;
  border-radius: 23rpx;
  border: 2rpx solid #3D82FF;
}

.batteryDeviceDetail .manage .slot_box .line {
  width: 626rpx;
  margin: 20rpx 0;
  border-top: 2rpx solid #f5f5f5;
}

.batteryDeviceDetail .manage .slot_box .battery_info {
  display: flex;
  justify-content: space-around;
}

.batteryDeviceDetail .manage .slot_box .battery_info .battery_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
}

.batteryDeviceDetail .manage .slot_box .battery_info .battery_item .battery_title {
  margin-bottom: 12rpx;
  font-weight: 500;
  color: #999999;
}

.batteryDeviceDetail .manage .slot_box .battery_info .battery_item .battery_title_fault {
  color: #F0513A;
}

.batteryDeviceDetail .profit {
  padding: 32rpx 30rpx 0;
  box-sizing: border-box;
}

.batteryDeviceDetail .profit .tab {
  display: flex;
  align-items: center;
  width: 690rpx;
}

.batteryDeviceDetail .profit .tab .tab_item {
  width: 140rpx;
  height: 64rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #777777;
  line-height: 64rpx;
  text-align: center;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 33rpx;
}

.batteryDeviceDetail .profit .tab .tab_item+.tab_item {
  margin-left: 44rpx;
}

.batteryDeviceDetail .profit .tab .tab_selected {
  width: 140rpx;
  height: 64rpx;
  color: #FFFFFF;
  background: #3D82FF;
  box-shadow: 0px 4rpx 8rpx 0rpx rgba(61, 130, 255, 0.2);
  border-radius: 32rpx;
}

.batteryDeviceDetail .profit .list_wrap {
  width: 690rpx;
  height: 90rpx;
  margin-top: 24rpx;
  padding: 0 32rpx;
  background: #FEFFFE;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
  box-sizing: border-box;
}

.batteryDeviceDetail .profit .list_wrap .list_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
}

.batteryDeviceDetail .profit .list_wrap .list_title .picker {
  display: flex;
  align-items: center;
}

.batteryDeviceDetail .profit .list_wrap .list_title .picker .image {
  width: 20rpx;
  height: 12rpx;
  margin-left: 22rpx;
}

.batteryDeviceDetail .profit .line {
  width: 690rpx;
  height: 2rpx;
  background: #F8F8F8;
}

.batteryDeviceDetail .profit .profit_list {
  width: 690rpx;
  background: #FEFFFE;
  border-radius: 0rpx 0rpx 8rpx 8rpx;
}

.batteryDeviceDetail .profit .profit_list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 626rpx;
  height: 96rpx;
  margin: 0 auto;
}

.batteryDeviceDetail .profit .profit_list .item+.item {
  border-top: 2rpx solid #F8F8F8;
}