.addSellerAccount {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
  background-color: #F4F5F5;
}

.addSellerAccount .basic_info {
  width: 100vw;
  padding: 0 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.addSellerAccount .title {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.addSellerAccount .addSellerAccount_title {
  width: 140rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}

.addSellerAccount .line {
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
}

.addSellerAccount .basic_info_input_wrap {
  display: flex;
  align-items: center;
  width: 690rpx;
  padding: 30rpx 0;
}

.addSellerAccount .basic_info_input_wrap .addSellerAccount_picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 500rpx;
}

.addSellerAccount .basic_info_input_wrap .addSellerAccount_picker .picker {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  line-height: 36rpx;
}

.addSellerAccount .basic_info_input_wrap .addSellerAccount_picker .picker .pickerPlaceholder {
  font-size: 26rpx;
  font-weight: 400;
  color: #AAAAAA;
  line-height: 36rpx;
}


.addSellerAccount .basic_info_input_wrap .addSellerAccount_picker .image {
  width: 28rpx;
  height: 16rpx;
}

.addSellerAccount .basic_info_input_wrap .basic_info_input {
  height: 36rpx !important;
  min-height: 36rpx !important;
  padding-top: 0;
  padding-bottom: 0;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 36rpx;
}

.addSellerAccount .authority_set {
  width: 100vw;
  /* height: 274rpx; */
  margin: 16rpx 0 30rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

.addSellerAccount .authority_set_switch_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  padding: 28rpx 0;
}

.authority_set .authority_set_line {
  width: 690rpx;
  border-top: 2rpx solid #f5f5f5;
}

.addSellerAccount .authority_set_switch {
  display: flex;
  align-items: center;
  height: 44rpx;
  transform: scale(.7);
}

.addSellerAccount .btn {
  width: 690rpx;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: 700;
  line-height: 88rpx;
  text-align: center;
  color: #FFFFFF;
  background: #3D82FF;
  border-radius: 4rpx;
}
.authority_set .authority_set_checkbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}
.authority_set .authority_set_checkbox .checkbox_title{
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}
.authority_set .authority_set_checkbox .authority_checkbox{
  width: 180rpx;
}
.authority_set .authority_set_checkbox .authority_checkbox .checkbox_options{
  display: flex;
  align-items: center;
}
.authority_set .authority_set_checkbox .authority_checkbox .checkbox_options .checkbox_check{
  color: #3D82FF;
}

.authority_set .authority_set_checkbox .authority_checkbox .checkbox_options .checkbox_name{
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}