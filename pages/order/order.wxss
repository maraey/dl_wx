.order {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 91vh;
  background-color: #F4F5F5;
  overflow: scroll;
}
.order .scroll{
  width: 690rpx;
  height: calc(100vh - 338rpx);
}
.order .screen_bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100vw;
  height: 88rpx;
  background-color: #fff;
}

.order .screen_bar .screen_title_wrap {
  display: flex;
  align-items: center;
}

.order .screen_bar .screen_title_wrap .screen_title {
  margin-right: 16rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
}

.order .screen_bar .screen_title_wrap .screen_title_select {
  font-weight: 500;
  color: #3D82FF;
}

.order .screen_bar .screen_title_wrap .screen_triangle {
  width: 0;
  height: 0;
  margin-top: 7rpx;
  border-top: 7rpx solid #AAAAAA;
  border-right: 6rpx solid transparent;
  border-bottom: 7rpx solid transparent;
  border-left: 6rpx solid transparent;
}

.order .screen_bar .screen_title_wrap .screen_triangle_select {
  width: 0;
  height: 0;
  margin-bottom: 7rpx;
  border-top: 7rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-bottom: 7rpx solid #3D82FF;
  border-left: 6rpx solid transparent;
}

.order .line {
  width: 100vw;
  border-top: 2rpx solid #F5F5F5;
}

.order .screen_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100vw;
  height: 80rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.order .screen_info .screen_info_text {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}

.order .order_box {
  width: 690rpx;
  margin-bottom: 30rpx;
  padding: 36rpx 32rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.order .order_box .title_amount {
  margin-bottom: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
}

.order .order_box .title_num {
  display: flex;
  justify-content: space-between;
}

.order .order_box .title_num .title_num_text {
  width: 530rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  line-height: 42rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

.order .order_box .title_num .title_num_copy {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 76rpx;
  height: 38rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #3D82FF;
  background: #FFFFFF;
  border-radius: 19rpx;
  border: 2rpx solid #3D82FF;
}

.order .order_box .order_box_line {
  width: 626rpx;
  margin: 28rpx 0 24rpx 0;
  border-top: 2rpx solid #F5F5F5;
}

.order .order_box .order_box_bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order .order_box .order_box_bottom .order_box_bottom_list .order_box_bottom_list_item {
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
  line-height: 40rpx;
}

.order .order_box .order_box_bottom .order_box_bottom_list .order_box_bottom_list_item+.order_box_bottom_list_item {
  margin-top: 16rpx;
}

.order .order_box .order_box_bottom .order_box_bottom_list .order_box_bottom_list_item .order_box_bottom_text_title {
  margin-right: 28rpx;
}

.order .order_box .order_box_bottom .order_box_bottom_list .order_box_bottom_list_copy {
  display: flex;
  justify-content: flex-end;
  width: 626rpx;
  margin-top: 16rpx;
}

.order .order_box .order_box_bottom .order_box_bottom_list .order_box_bottom_list_copy .order_box_bottom_text_copy {
  width: 128rpx;
  height: 46rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #F0513A;
  line-height: 46rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 23rpx;
  border: 2rpx solid #F0513A;
}

.order .order_box .more .image {
  width: 12rpx;
  height: 16rpx;
  margin-right: 6rpx;
}

.popup {
  position: fixed;
  top: 88rpx;
  width: 100vw;
  height: 100vh;
  border-top: 2rpx solid #F4F5F5;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999;
}

.popup .popup_box {
  width: 100vw;
  padding: 24rpx 30rpx;
  background-color: #fff;
}

.popup .popup_box .popup_box_title {
  margin-bottom: 8rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 42rpx;
}

.popup .popup_box .popup_box_options {
  display: flex;
  flex-wrap: wrap;
}

.popup .popup_box .popup_box_options .popup_box_option {
  width: 160rpx;
  height: 62rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 62rpx;
  text-align: center;
  background: #F8F8F8;
  border-radius: 4rpx;
}

.popup .popup_box .popup_box_options .popup_box_option {
  margin-right: 16rpx;
  margin-top: 22rpx;
}

.popup .popup_box .popup_box_options .popup_box_option_select {
  color: #3D82FF;
  background: rgba(61, 130, 255, .1);
}

.popup .popup_box .popup_box_line {
  margin: 24rpx 0;
  width: 690rpx;
  border-top: 2rpx solid #F5F5F5;
}

.popup .popup_box .popup_box_btn {
  display: flex;
}

.popup .popup_box .popup_box_btn .popup_box_reset {
  width: 160rpx;
  height: 80rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 80rpx;
  text-align: center;
  color: #333333;
  background: #FFFFFF;
  border-radius: 4rpx;
  border: 2rpx solid rgba(153, 153, 153, .3);
  box-sizing: border-box;
}

.popup .popup_box .popup_box_btn .popup_box_sub {
  width: 506rpx;
  height: 80rpx;
  margin-left: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 80rpx;
  text-align: center;
  background: #3D82FF;
  border-radius: 4rpx;
}

.popup .popup_box .popup_box_screen+.popup_box_screen {
  margin-top: 24rpx;
}

.popup .popup_box .popup_box_screen .popup_box_screen_input {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-top: 8rpx;
  width: 690rpx;
  height: 74rpx;
  background-color: #f8f8f8;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.popup .popup_box .popup_box_screen .popup_box_screen_input .input {
  width: 650rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
}

.popup .popup_box .popup_box_screen .popup_box_screen_picker {
  display: flex;
  justify-content: space-between;
  width: 690rpx;
  margin-top: 8rpx;
}

.popup .popup_box .popup_box_screen .popup_box_screen_picker .popup_screen_date {
  display: flex;
  align-items: center;
  width: 332rpx;
  height: 74rpx;
  padding: 0 24rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.popup .popup_box .popup_box_screen .popup_box_screen_picker .popup_screen_date .popup_date_image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 24rpx;
}

.popup .popup_box .popup_box_screen .popup_box_screen_picker .popup_screen_date .popup_picker_placeholder {
  font-size: 24rpx;
  font-weight: 400;
  color: #AAAAAA;
  line-height: 34rpx;
}

.popup .popup_box .popup_box_screen .popup_box_screen_picker .popup_screen_date .popup_picker {
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
}