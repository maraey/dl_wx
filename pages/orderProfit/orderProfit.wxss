.orderProfit {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
  padding: 30rpx 0;
  background: #F4F5F5;
  overflow: scroll;
  box-sizing: border-box;
}

.orderProfit .search {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 72rpx;
  background: #FFFFFF;
  font-size: 26rpx;
  font-weight: 400;
  border-radius: 4rpx;
}

.orderProfit .search image {
  width: 28rpx;
  height: 28rpx;
  margin: 0 22rpx 0 30rpx;
}

.orderProfit .search input {
  width: 500rpx;
}

.orderProfit .screen {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  height: 90rpx;
  margin-top: 24rpx;
  padding: 0 32rpx;
  background: #FEFFFE;
  border-radius: 8rpx 8rpx 0px 0px;
  box-sizing: border-box;
}

.orderProfit .screen .time {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.orderProfit .screen .time image {
  width: 20rpx;
  height: 12rpx;
  margin-left: 22rpx;
}

.orderProfit .screen .total {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
}

.orderProfit .line {
  width: 690rpx;
  border-top: 2rpx solid #f8f8f8;
}

.orderProfit .list {
  width: 690rpx;
  background-color: #fff;
  border-radius: 0 0 8rpx 8rpx;
}

.orderProfit .list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 626rpx;
  height: 96rpx;
  margin: 0 auto;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
}
.orderProfit .list .item+.item{
  border-top: 2rpx solid #f8f8f8;
}