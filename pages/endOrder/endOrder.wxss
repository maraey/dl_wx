.end_order {
  width: 100vw;
  height: 100vh;
  padding: 30rpx;
  background-color: #F4F5F5;
  box-sizing: border-box;
}

.end_order .end_order_box {
  width: 690rpx;
  padding: 36rpx 32rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.end_order .end_order_box+.end_order_box {
  margin-top: 30rpx;
}

.end_order .end_order_box .end_order_box_title {
  margin-bottom: 4rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
}

.end_order .end_order_box .end_order_box_item {
  margin-top: 16rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.end_order .end_order_box .end_order_box_text {
  margin-bottom: 20rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}

.end_order .end_order_box .end_order_box_input {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 20rpx;
  width: 626rpx;
  height: 80rpx;
  border-radius: 4rpx;
  border: 2rpx solid #E8E8E8;
  box-sizing: border-box;
}

.end_order .end_order_box .end_order_box_input .input {
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}

.end_order .end_order_box .end_order_box_textarea {
  width: 626rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: 4rpx;
  border: 2rpx solid #E8E8E8;
  overflow: hidden;
  box-sizing: border-box;
}

.end_order .end_order_box .end_order_box_textarea .textarea {
  width: 626rpx;
  height: 200rpx;
  padding: 22rpx 20rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
  box-sizing: border-box;
}

.end_order .end_order_box .is_return {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.end_order .end_order_box .is_return .is_return_radio .is_return_radio_group {
  display: flex;
  align-items: center;
}

.end_order .end_order_box .is_return .is_return_radio .is_return_radio_group .radio_group {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.end_order .end_order_box .is_return .is_return_radio .is_return_radio_group .radio_group .radio {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  transform: scale(.75);
}

.end_order .end_btn {
  width: 690rpx;
  height: 88rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
  background: #F0513A;
  border-radius: 44rpx;
}