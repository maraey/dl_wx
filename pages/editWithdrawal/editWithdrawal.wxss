.editWithdrawal {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100vw;
  height: 100vh;
}

.editWithdrawal .item {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 100rpx;
  font-size: 28rpx;
  font-weight: 400;
  border-bottom: 2rpx solid #f5f5f5;
}

.editWithdrawal .item .item_title {
  width: 180rpx;
  height: 40rpx;
  margin-right: 56rpx;
  color: #333333;
}

.editWithdrawal .item .radio_group {
  display: flex;
  align-items: center;
  height: 36rpx;
}

.editWithdrawal .item .radio_group .radio_group_label {
  display: flex;
  align-items: center;
}

.editWithdrawal .item .radio_group .radio_group_label .radio_group_label_radio {
  display: flex;
  align-items: center;
  transform: scale(.75);
}

.editWithdrawal .item .radio_group .radio_group_label+.radio_group_label {
  margin-left: 40rpx;
}

.editWithdrawal .item .radio_group .radio_group_label .radio_group_text {
  margin-left: 16rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}

.editWithdrawal .item .input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 494rpx;
}

.editWithdrawal .item .input .get_sms {
  width: 150rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  background: #3D82FF;
  border-radius: 22rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.editWithdrawal .title {
  width: 690rpx;
  margin: 22rpx 0 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
}

.editWithdrawal .image {
  width: 690rpx;
  height: 240rpx;
}

.editWithdrawal .image image {
  width: 690rpx;
  height: 240rpx;
}

.editWithdrawal .sub {
  width: 690rpx;
  height: 88rpx;
  margin-top: 30rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  background: #3D82FF;
  border-radius: 44rpx;
}
.popup{
  display: flex;
  justify-content: center;
  position: fixed;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 2;
}
.popup .box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 622rpx;
  height: 420rpx;
  margin-top: 24vh;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.popup .box .popup_title{
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  line-height: 42rpx;
}
.popup .box .input_wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 534rpx;
  height: 82rpx;
  margin: 28rpx 0 24rpx 0;
  padding: 0 24rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.popup .box .input_wrap .popup_input{
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
}
.popup .box .input_wrap .popup_text{
  font-size: 24rpx;
  font-weight: 400;
  color: #F0513A;
  line-height: 34rpx;
}
.popup .box .popup_sms{
  display: flex;
  align-items: center;
  width: 534rpx;
}
.popup .box .popup_sms .popup_image{
  width: 222rpx;
  height: 88rpx;
  margin-right: 26rpx;
}
.popup .box .popup_sms .popup_sms_text{
  font-size: 26rpx;
  font-weight: 400;
  color: #AAAAAA;
  line-height: 36rpx;
}
.popup .box .popup_line{
  width: 622rpx;
  margin: 30rpx 0 24rpx 0;
  border-top: 2rpx solid #F5F5F5;
}
.popup .box .popup_btn_wrap{
  display: flex;
  justify-content: space-around;
  width: 622rpx;
}
.popup .box .popup_btn_wrap .popup_btn_line{
  height: 26rpx;
  border-left: 2rpx solid #F5F5F5;
}
.popup .box .popup_btn_wrap .popup_btn{
  display: flex;
  justify-content: center;
  width: 50%;
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx;
}
.popup .box .popup_btn_wrap .popup_btn_weight{
  font-weight: 500;
}