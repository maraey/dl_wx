.selectSeller {
  width: 100vw;
  height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}
.selectSeller .list{
  height: 80vh;
  overflow: scroll;
}
.selectSeller .search_bar {
  margin-bottom: 10rpx;
}

.selectSeller .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  height: 100rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  border-bottom: 2rpx solid #f5f5f5;
  box-sizing: border-box;
}

.selectSeller .item .radio {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 36rpx;
  height: 36rpx;
  transform: scale(.8);
}

.btn {
  position: absolute;
  bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  width: 690rpx;
}

.btn .cancle {
  width: 160rpx;
  height: 80rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 80rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 4rpx;
  border: 2rpx solid rgba(153, 153, 153, .3);
  box-sizing: border-box;
}

.btn .sub {
  width: 506rpx;
  height: 80rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 80rpx;
  text-align: center;
  background: #3D82FF;
  border-radius: 4rpx;
}