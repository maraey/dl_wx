.popup .popup_box .popup_box_screen .popup_box_screen_input .image_scan{
  width: 38rpx;
  height: 38rpx;
  margin-left: 12rpx;
}
.popup .popup_box .popup_box_screen .popup_box_screen_picker {
  display: flex;
  justify-content: space-between;
