.popup .popup_box .popup_box_btn .popup_box_sub {
  width: 506rpx;
  height: 80rpx;
  margin-left: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 80rpx;
  text-align: center;
  background: #3D82FF;
