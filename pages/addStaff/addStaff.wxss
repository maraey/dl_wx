.addStaff{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
  background-color: #F4F5F5;
}
.addStaff .basic_info{
  width: 100vw;
  height: 466rpx;
  padding: 0 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.addStaff .title{
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.addStaff .addStaff_title{
  width: 140rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}
.addStaff .line{
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
}
.addStaff .basic_info_input_wrap{
  display: flex;
  align-items: center;
  width: 690rpx;
  padding: 30rpx 0;
}
.addStaff .basic_info_input_wrap .basic_info_input{
  width: 400rpx;
  height: 36rpx !important;
  min-height: 36rpx !important;
  padding-top: 0;
  padding-bottom: 0;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 36rpx;
}
.addStaff .authority_set{
  width: 100vw;
  height: 274rpx;
  margin: 16rpx 0 30rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}
.addStaff .authority_set_switch_wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  padding: 28rpx 0;
}
.authority_set .authority_set_line{
  width: 690rpx;
  border-top: 2rpx solid #f5f5f5;
}
.addStaff .authority_set_switch{
  display: flex;
  align-items: center;
  height: 44rpx;
  transform: scale(.7);
}
.addStaff .btn{
  width: 690rpx;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: 700;
  line-height: 88rpx;
  text-align: center;
  color: #FFFFFF;
  background: #3D82FF;
  border-radius: 4rpx;
}