page {
  background-color: #F4F5F5;
}

.pileMonth .open_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  height: 96rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

.pileMonth .title {
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}

.pileMonth .open_box .switch {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 40rpx;
  transform: scale(.7);
}

.pileMonth .info {
  width: 750rpx;
  height: 214rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
  margin: 30rpx 0;
  box-sizing: border-box;
}

.pileMonth .info .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  height: 96rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.pileMonth .info .top .radios {
  display: flex;
  align-items: center;
}

.pileMonth .info .top .radios .item {
  display: flex;
  align-items: center;
}

.pileMonth .info .top .radios .item+.item {
  margin-left: 30rpx;
}

.pileMonth .info .top .radios .item .radio {
  display: flex;
  align-items: center;
  transform: scale(.75);
}

.pileMonth .info .top .radios .item .name {
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}

.pileMonth .info .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  height: 116rpx;
}

.pileMonth .right {
  display: flex;
  align-items: center;
}

.pileMonth .input_box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 156rpx;
  height: 68rpx;
  margin-right: 16rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  border: 2rpx solid #E9EAF0;
  box-sizing: border-box;
}

.pileMonth .input_box .input {
  width: 156rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  box-sizing: border-box;
}

.pileMonth .unit {
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}

.pileMonth .operate {
  width: 750rpx;
  height: 298rpx;
  padding: 30rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

.pileMonth .operate .tab_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0 40rpx;
}

.pileMonth .operate .tab_box .tab_item {
  width: 140rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  color: #AAAAAA;
  background: #F4F5F5;
  border-radius: 32rpx;
}

.pileMonth .operate .tab_box .tab_select {
  color: #FFFFFF;
  background: #3D82FF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(61, 130, 255, 0.2);
  border-radius: 33rpx;
}

.pileMonth .operate .inputs {
  display: flex;
  justify-content: flex-end;
}

.pileMonth .operate .inputs .right {
  margin-left: 40rpx;
}

.pileMonth .btn {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
  background: #3D82FF;
  border-radius: 4rpx;
}