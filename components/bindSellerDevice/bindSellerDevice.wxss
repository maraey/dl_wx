.bindSeller {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: 100vh;
  background-color: #fff;
  z-index: 2;
}
.bindSeller .input_box {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 72rpx;
  margin: 0 auto;
  margin-top: 24rpx;
  padding: 0 30rpx;
  font-size: 22rpx;
  background: #F8F8F8;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.bindSeller .input_box .image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 22rpx;
}

.bindSeller .input_box .input {
  width: 570rpx;
}

.bindSeller .list {
  width: 690rpx;
  height: calc(100vh - 400rpx);
  margin: 0 auto;
  overflow: scroll;
}

.bindSeller .list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  height: 100rpx;
  padding-left: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
  box-sizing: border-box;
}

.bindSeller .list .item .name {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
}

.bindSeller .list .item .radio {
  display: flex;
  align-items: center;
  transform: scale(.75);
}

.bindSeller .bottom {
  position: fixed;
  bottom: 38rpx;
  left: 30rpx;
  width: 690rpx;
}
.bindSeller .btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  margin-top: 30rpx;
}

.bindSeller .btn .cancel {
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  background: #FFFFFF;
  border-radius: 4rpx;
  border: 2rpx solid rgba(153, 153, 153, .3);
  box-sizing: border-box;
}

.bindSeller .btn .sub {
  width: 506rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
  background: #3D82FF;
  border-radius: 4rpx;
}