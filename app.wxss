.phcolor {
  color: #AAAAAA;
  font-weight: 400;
}

.search_bar {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 72rpx;
  padding: 0 30rpx;
  background-color: #f8f8f8;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.search_bar .image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 18rpx;
}

.search_bar .input {
  width: 550rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
}
.nodata{
  width: 100%;
}
.nodata .nodataImg {
  margin-left: 50%;
  width: 224rpx;
  height: 258rpx;
  margin-top: 80rpx;
  transform: translateX(-50%);
}

.nodata .nodataText {
  margin-top: 22rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #CCCCCC;
  line-height: 34rpx;
  text-align: center;
}
.placeholderClass{
  height: 40rpx;
  font-size: 28rpx;
